@model WebApplication12.Model.ViewModel.ForgetPasswordVM
 
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login  Page </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/Identity/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <link href="~/Identity/css/style.css" rel="stylesheet" />
</head>

<body>

    <div class="wrapper">
        <div class="image-holder">
            <img src="~/Identity/images/registration-form-8.jpg" alt="">
        </div>
        <div class="form-inner">

            <section class="sign-in">
                <div class="container">
                    <div class="signin-content">
                        <div class="signin-image">
                            <figure><img src="/Identity/images/signin-image.jpg" alt="sing up image"></figure>
                            <a asp-controller="Account" asp-action="Login" class="form-submit"> Login  </a>
                        </div>

                        <div class="signin-form">
                            <h2 class="form-title"> Rest Password </h2>
                            <form asp-controller="Account" asp-action="ForgetPassword" method="POST" class="register-form" id="login-form">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label><i class="zmdi zmdi-email"></i></label>
                                    <input type="email" asp-for="Email" placeholder="Your Email" />
                                </div>
                                <div>
                                    <span asp-validation-for="Email" class="text-danger"> </span>
                                </div>
                        
                          
                                <div class="form-group form-button">
                                    <input type="submit" name="signin" id="signin" class="form-submit" value="Rest Password" />
                                </div>
                            </form>

                        </div>
                        <div>
                        </div>
                    </div>
                </div>
            </section>


        </div>

    </div>




    <script src="~/Identity/js/main.js"></script>
</body>
</html>
